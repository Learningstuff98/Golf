<div class="container">
  <div class="text-center landing-box box col-8">
    <%= simple_form_for @game, url: games_path do |f| %>
      <h4 class="green start-menu">
        <%= f.input :max_player_count, input_html: { min: '2', max: '4', step: 'any', value: '2' } %>
        <br/>
        <%= f.input :rounds, input_html: { min: '1', max: '9', step: 'any', value: '1' } %>
        <br/>
        <%= f.submit 'Start', class: 'btn btn-primary green' %>
      </h4>
    <% end %>
  </div>
</div>
