<!DOCTYPE html>
<html>
  <head>
    <title>Golf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>

    <div class="custom-navbar fixed-top">
      <h5><%= link_to 'Go To Homepage', root_path, class: "green" %></h5>
      <% if current_user %>
        <h6 class="green"><%= "Currently logged in as #{current_user.username}" %></h6>
      <% end %>
    </div>
    <br/><br/><br/><br/>

    <h4 class="green text-center">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </h4>

    <%= yield %>

    <div class="custom-footer">
      <h6 class="green">Footer Content</h6>
    </div>

  </body>
</html>
